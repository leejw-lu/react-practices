<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="task">


   <select id="findAll" parameterType="long" resultType="taskvo" >
   		<![CDATA[
   		select no, name, done, card_no from task where card_no=#{cardNo} 
   		]]>
   </select>

   <insert id="insert" parameterType="taskvo">
      <![CDATA[
      insert into task values (null, #{name}, 'N', #{card_no} )
      ]]>
   </insert>
   
	<update id="update" parameterType="taskvo">
		<![CDATA[
		update task set done=#{done} where no=#{no }	
		]]>	
	</update>
	
	<delete id= "delete" parameterType="long">
		<![CDATA[
		delete from task where no = #{no }
		]]>
	</delete>
   
</mapper>
